package com.train.week1day2.qn03;

public class SumOfMaxMinNum {

	public static void main(String[] args) {
	
		//
		
		int[] inputArray = {19, 17, 12};
		int maxValue = 0;
		int minValue = 0;
		
		for (int i=0; i<inputArray.length; i++) {
			if (inputArray[i] > maxValue) {
			maxValue = inputArray[i];
		} else if (inputArray[i] < maxValue) {
			minValue = inputArray[i];
		}
		
	}
	System.out.println("Maximum Number : " +maxValue);
	System.out.println("Maximum Number : " +minValue);
    System.out.println("Sum of Maximum and Mimum Numbers : " +(maxValue+minValue));
	
	}
}
